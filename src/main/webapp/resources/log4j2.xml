<?xml version="1.0" encoding="UTF-8" ?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd@HH:mm:ss:SSSS} %p : [%C:%L] %m%n" />
        </Console>
        <RollingFile name="Generic" fileName="logs/generic.log"
                     filePattern="logs/generic-%i.log">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd@HH:mm:ss:SSSS} %p : [%C:%L] %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <SizeBasedTriggeringPolicy size="100KB" />
            </Policies>
            <DefaultRolloverStrategy max="4" />
        </RollingFile>
        <RollingFile name="Requests"
                     fileName="C:\Program Files\Apache Software Foundation\apache-tomcat-9.0.41\logs\requests.log"
                     filePattern="C:\Program Files\Apache Software Foundation\apache-tomcat-9.0.41\logs\requests-%d{yy_MM_dd}-%i.log">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd@HH:mm:ss:SSSS} %m : METHOD %X{method}. URI:
                    %X{uri}</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true" />
                <SizeBasedTriggeringPolicy size="100KB" />
            </Policies>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="ERROR">
            <AppenderRef ref="Console" />
        </Root>
        <Logger name="serpas.josue.chattingpracticeapp" level="WARNING">
            <AppenderRef ref="Generic" />
        </Logger>
        <Logger name="serpas.josue.chattingpracticeapp.filters.RequestLogger"
                level="INFO" additivity="false">
            <AppenderRef ref="Requests" />
        </Logger>
    </Loggers>
</Configuration>